<h1 class="text-xl flex flex-auto justify-center mt-5">Create your article</h1>

<%= form_for( @article) do |f| %>
<div class="flex flex-col justify-center space-y-5 m-40 mt-12">
<%= f.text_field :title, placeholder:"Title" %> 

<%= f.text_area :body, placeholder:"Write here your article" %> 
</div>
<% end %>